# ========================================
# DATABASE CONFIGURATION
# ========================================
# This is the connection string to your PostgreSQL database
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME
# When using Docker, the HOST is the service name from docker-compose.yml
DATABASE_URL="postgresql://taskuser:taskpassword@postgres:5432/taskmanagement"

# ========================================
# JWT (JSON Web Token) CONFIGURATION
# ========================================
# SECRET: Used to sign tokens (like a password for your tokens)
# Generate a strong random string in production!
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# EXPIRES_IN: How long until token expires
# Options: "1h" (1 hour), "7d" (7 days), "30d" (30 days)
JWT_EXPIRES_IN="7d"

# ========================================
# SERVER CONFIGURATION
# ========================================
# Port your backend runs on
PORT=5000

# Environment (development, production, test)
NODE_ENV="development"

# ========================================
# REDIS CONFIGURATION
# ========================================
# Redis is used for caching (makes app faster)
# When using Docker, the HOST is the service name from docker-compose.yml
REDIS_HOST="redis"
REDIS_PORT=6379

# ========================================
# CORS CONFIGURATION
# ========================================
# Which frontend URLs can access your API
# In development, your React app runs on port 3000
CORS_ORIGIN="http://localhost:3000"

# ========================================
# OPTIONAL: EMAIL CONFIGURATION (for later)
